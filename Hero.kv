WindowManager:
    HeroScreen:
    FrontPageScreen:
    IntroScreen:

<HeroScreen>:
    name: 'Hero'
    size_hint:.7,1
    pos_hint:{'center_x':0.5,'center_y':0.5} 
    GridLayout:
        spacing:"5dp"
        cols:1
        pos_hint:{'center_x':0.5,'center_y':0.75} 
        Image:
            source:'zebre.jpg' 
    GridLayout:
        cols:2
        spacing:"5dp"
        Label:
            text: 'Speakeasy'
            font_size:"40px"
            color:"#F4C313"
    GridLayout:
        cols:3
        pos_hint:{'center_x':0.5,'center_y':0.35}
        Label:
            text: 'The free, fun and method to learn a language !'
            font_size:"22px"
            color:"#908888"
    Button: 
        text:"LET'S GO !"
        width:"500px"
        height:"50px"
        font_size:'30px'
        background_color:"#f4c313"
        background_normal:""
        size_hint:(None,None)
        pos_hint:{'center_x':0.5,'center_y':0.2}
        on_release:app.root.current="FrontPage"
    Button: 
        text:"I ALREADY HAVE AN ACCOUNT"
        width:"500px"
        height:"70px"
        font_size:'22px'
        size_hint:(None,None)
        pos_hint:{'center_x':0.5,'center_y':0.1}
        background_color:"#FFF8F8"
        background_normal:""
        color:'#f4c313'

<FrontPageScreen>:
    name:'FrontPage'
    size_hint:.7,1
    pos_hint:{'center_x':0.5,'center_y':0.5}  
    GridLayout:
        cols:2
        spacing:"5dp"
        pos_hint:{'center_x':0.5,'center_y':0.75} 
        Label:
            text_area: "Hello ,my name is Speak. I will guide you throughout this wonderful journey "
            font_size:"20px"
            color:"#908888"
    GridLayout:
        spacing:"5dp"
        cols:3
        Image:
            source:'zebre1.jpg' 
    Button: 
        text:"CONTINUE"
        width:"500px"
        height:"70px"
        font_size:'35px'
        background_color:"#f4c313"
        background_normal:""
        size_hint:(None,None)
        pos_hint:{'center_x':0.5,'center_y':0.2}
        on_release:app.root.current="Intro"

<IntroScreen>:
    name:'Intro'
    size_hint:.7,1
    pos_hint:{'center_x':0.5,'center_y':0.5} 
    Label:
        pos_hint:{'center_x':0.2,'center_y':0.8} 
        text:"What do you want to learn ?"
        font_size:"18px"
        color:"black"
    Image:
        pos_hint:{'center_x':0.8,'center_y':0.8} 
        source:'zebre1.jpg' 
        width:"10px"
        font_size:"10px"
    Label:
        pos_hint:{'center_x':0.15,'center_y':0.65} 
        text:"For French Speaking people"
        color:"black"
    Button
        pos_hint:{'center_x':0.3,'center_y':0.55} 
        text:"Ewondo"
        background_color:"#908888"
        background_normal:""
        size_hint:(None,None)
        width:"250px"
        height:"50px"
        font_size:"22px"
    Button
        pos_hint:{'center_x':0.3,'center_y':0.45} 
        text:"Douala"
        background_color:"#908888"
        background_normal:""
        size_hint:(None,None)
        width:"250px"
        height:"50px"
        font_size:"22px"
    Button
        pos_hint:{'center_x':0.3,'center_y':0.35} 
        text:"Bagangte"
        background_color:"#908888"
        background_normal:""
        size_hint:(None,None)
        width:"250px"
        height:"50px"
        font_size:"22px"
            


     
